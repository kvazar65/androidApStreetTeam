<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sport">


    <LinearLayout
        android:id="@+id/MainMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/buttonMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/darker_gray"
            android:onClick="buttonClickMap"
            android:text="Карта"
            android:textSize="36sp"
            app:layout_constraintBottom_toTopOf="@id/buttonChat"
            app:layout_constraintLeft_toLeftOf="@id/MainMenu"
            app:layout_constraintRight_toRightOf="@id/MainMenu"
            app:layout_constraintTop_toTopOf="@id/MainMenu" />

        <Button
            android:id="@+id/buttonChat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/darker_gray"
            android:onClick="buttonClickChat"
            android:text="Чат"
            android:textSize="36sp"
            app:layout_constraintBottom_toTopOf="@id/button_places"
            app:layout_constraintLeft_toLeftOf="@id/MainMenu"
            app:layout_constraintRight_toRightOf="@id/MainMenu"
            app:layout_constraintTop_toBottomOf="@id/buttonMap" />

        <Button
            android:id="@+id/button_places"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/darker_gray"
            android:onClick="buttonClickProfile"
            android:text="Локации"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="@id/MainMenu"
            app:layout_constraintLeft_toLeftOf="@id/MainMenu"
            app:layout_constraintRight_toRightOf="@id/MainMenu"
            app:layout_constraintTop_toBottomOf="@id/buttonChat" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>